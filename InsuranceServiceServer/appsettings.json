{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AppConnection": "Server=.;Database=InsuranceServiceDb;Integrated Security=true;TrustServerCertificate=True;"
  },
  "Jwt": {
    "SecretKey": "your-secret-key-min-32-chars",
    "Issuer": "insurance-service",
    "Audience": "insurance-service-client",
    "ExpiryHours": 1
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://localhost:5173"
    ]
  },
  "ClientUrl": "http://localhost:5173",
  "Gmail": {
    "FromName": "Insurance Service",
    "FromEmail": "your-email@gmail.com",
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": "587",
    "Username": "your-email@gmail.com",
    "Password": "your-app-password"
  },
  "Twilio": {
    "AccountSid": "your-twilio-account-sid",
    "AuthToken": "your-twilio-auth-token",
    "PhoneNumber": "your-twilio-phone",
    "EnableRealSms": false
  }
}